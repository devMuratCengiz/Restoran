@model List<ResultTestimonialDto>
@{
    Layout = null;
}

<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Müşteriler</h5>
            <h1 class="mb-5">Mutlu Müşteriler</h1>
        </div>
        <div style="display:block" class="owl-carousel testimonial-carousel">
            @foreach (var item in Model)
            {
                <div class="testimonial-item bg-transparent border rounded p-4">
                    <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                    <p>@item.Comment</p>
                    <div class="d-flex align-items-center">
                        <img class="img-fluid flex-shrink-0 rounded-circle" src="~/restoran-1.0.0/img/testimonial-1.jpg" style="width: 50px; height: 50px;">
                        <div class="ps-3">
                            <h5 class="mb-1">@item.Name</h5>
                            <small>@item.Title</small>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>