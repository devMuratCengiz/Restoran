@model List<ResultFooterDto>
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5" style="justify-content:space-between">

                <div class="col-lg-3 col-md-6">
                    <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Çalışma Saatleri</h4>
                    <h5 class="text-light fw-normal">@item.OpeningDaysInWeek</h5>
                    <p>@item.OpeningHoursInWeek</p>
                    <h5 class="text-light fw-normal">@item.OpeningDaysWeekEnd</h5>
                    <p>@item.OpeningHoursWeekEnd</p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">İletişim</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>@item.Address</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>@item.Phone</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>@item.Mail</p>

                </div>

            </div>
        </div>

    </div>
}
