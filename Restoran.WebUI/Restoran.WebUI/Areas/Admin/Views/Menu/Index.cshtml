@model List<ResultMenuDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int count = 1;
}
<h2>Menu</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Ücret</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><a asp-action="Update" asp-controller="Menu" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a></td>
                <td><a asp-action="Delete" asp-controller="Menu" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>
            count++;
        }
        
        
    </tbody>
</table>

<a asp-action="Create" asp-controller="Menu" asp-area="Admin" class="btn btn-info">Ekle</a>